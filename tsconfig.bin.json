{
  "compilerOptions": {
    "declaration": true,
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "outDir": "./dist/bin",
    "skipLibCheck": true
  },
  "include": ["bin/**/*"],
  "exclude": ["dist", "node_modules", "templates", "src"]
}
